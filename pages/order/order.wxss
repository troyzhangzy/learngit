/* pages/order/order.wxss */
page {
  height: 100%;
  background-color: #edf2f7;
}
.scroll_tab{
  margin-left: 28rpx;
  width: 80rpx;
}
.scroll_tab_longname{
  margin-left: 20rpx;
}
.weui-navbar {
  position: fixed;
  height: 7%;
  z-index: 500;
  display: flex;
  width: 100%;
  background: #fff;
  border-bottom: 1px solid #00bba1;
  font-size:10rpx;
}

.rec {
  width: 100%;
  height: 7%;
}

.swiper-box {
  height: 93%;
  width: 100%;
}

.scl {
  height: 100%;
  display: flex;
  justify-content: center;
  font-size: 10rpx;
}

.scl-tab {
  margin-top: 500rpx;
  color: #999;
  font-size: 39rpx;
}

.weui-navbar__item {
  flex: 1;
  font-size: 23rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #494f56;
}

.weui-navbar__item.weui-bar__item_on {
  color: #00bba1;
}

.weui-navbar__slider {
  position: absolute;
  content: "";
  bottom: 0;
  height: 5rpx;
  background-color: #00bba1;
  transition: transform .3s;
  width: 126rpx;
  left: 30rpx;
}
.shop_container{
  
  display: flex;
  flex-direction: row;  
}
.firstimg{
  width: 190rpx;
  height: 190rpx;
  border-radius: 15%;
}
.first_line{
  margin-left: 20rpx;
  font-size: 31rpx;
  margin-bottom: 20rpx;
}
.text{
  margin-bottom: 12rpx;
}

.t1{
  background-color: white;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-top: 5%;
  padding-left: 5%;
  border-radius: 5%;
  height: 340rpx;
}
.t2{
  font-size: 31rpx;
  margin-bottom: 10rpx;
}
.t3{
  font-size: 29rpx;
  color: gray;

}
.br{
  margin-top: 2%;
}