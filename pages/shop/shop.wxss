page {
  height: 100%;
  background-color: #e1e1e1;
  
}
.tab-container{
  display: flex;
  flex-direction: column;
  height: 300rpx;
  margin-top: 1%  ;
  margin-left: 2%;
  margin-right: 2%;
  margin-bottom: 1%;
  background-color: #f5f5f5;
  border-radius: 5%;
  padding-left: 10rpx;
  padding-top: 10rpx;
  padding-right: 10rpx;
}
.tab-top-id{
  display: flex;
  border-bottom: #c7c5c5 solid;
}
.top-post{
  flex: 1;
  display: flex;
  justify-content:flex-end;
}
.top-id{
  font-size: 25rpx;
  color: #6d6d6d;
}
.merce-id{
  font-size: 25rpx;
  color: #6d6d6d;
}
.merce-name-price{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  font-size: 27rpx;
}
.merce-name{
  padding-left: 2%;
}
.merce-price{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  padding-right: 2%;
}
.merce-stock-allprice{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  font-size: 25rpx;
}
.merce-stock{
  color: #6d6d6d;

}
.merce-allprice{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  padding-right: 2%;
}
.merce-post-time{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #6d6d6d;
}

.post-time{
  flex: 1;
  display: flex;
